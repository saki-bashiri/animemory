<% content_for :title do %>
新規アニメ登録確認[アニメモリ]
<% end %>
<% content_for :head do %>
<%= stylesheet_link_tag "common/wiki" "anime/register" %>
<% end %>
<% content_for :h1 do %>
アニメ新規登録確認画面
<% end %>

<%= form_tag :action => "auth_anime_entry_conf", :method => :post do %>

<div class="row-fluid amRegistercontainer">
  <div class="span4">
    <p class="amCategoryhead2">アニメタイトル<p>
    <div class="row-fluid">
      <div class="span12 well amUpperSpace2">
        <div class="row-fluid">
          <div class="span12">タイトル : <%= @anime.title %></div>
          <%= hidden_field_tag "anime[title]", @anime.title %>
        </div>
        <div class="row-fluid">
          <div class="span12">かな : <%= @anime.kana%></div>
          <%= hidden_field_tag "anime[kana]", @anime.kana %>
        </div>

      </div>
    </div>
  </div>

  <div class="span4">
    <p class="amCategoryhead2">話数/作品タイプ<p>
    <div class="row-fluid">
      <div class="span12 well amRegister amUpperSpace2">

        <div class="row-fluid">
          <div class="span12">話数 ： <%= @ep_cnt.to_i > 0 ? "#{@ep_cnt}話" : "標準（13話）" %></div>
          <%= hidden_field_tag "anime[ep_cnt]", @ep_cnt.to_i %>
        </div>

        <div class="row-fluid">
          <div class="span12">作品タイプ ： <%= @anime.movie_flg ? "映画" : "映画ではない" %></div>
          <%= hidden_field_tag "anime[movie_flg]", @anime.movie_flg %>
        </div>

        </div>
      </div>
  </div>

  <div class="span4">
    <p class="amCategoryhead2">放送日期間/最速放送曜日<p>
    <div class="row-fluid">
      <div class="span12 well amRegister amUpperSpace2">


        <div class="row-fluid">
          <div class="span12 input">放送開始日 :　<%= @anime.started_on.strftime("%Y/%m/%d") rescue  "" %></div>
          <%= hidden_field_tag "anime[started_on]", @anime.started_on.strftime("%Y/%m/%d") rescue "" %>
        </div>

        <div class="row-fluid">
          <div class="span12">放送終了日 :　<%= @anime.finished_on.strftime("%Y/%m/%d") rescue "" %></div>
          <%= hidden_field_tag "anime[finished_on]", @anime.finished_on.strftime("%Y/%m/%d") rescue "" %>
        </div>


      </div>
    </div>
  </div>
</div>


<div class="row-fluid">
  <div class="span12">
    <p class="amCategoryhead2">アニメモ<p>
    <div class="row-fluid">
      <div class="span12 well amUpperSpace2">

        <div class="row-fluid">
          <div class="span12">アニメモ : <%= wiki(@anime.outline) %></div>
          <%= hidden_field_tag "anime[outline]", @anime.outline %>
        </div>

        <div class="row-fluid">
        <div class="span12 text-center">編集コメント : <%= params[:anime].present? ? params[:anime][:comment].to_s : "" %></div>
          <%= hidden_field_tag "anime[comment]", params[:anime].present? ? params[:anime][:comment].to_s : "" %>
        </div>

        <div class="row-fluid amRegistercontainer text-center">
        <%= submit_tag "登録する", :name => "commit" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>







