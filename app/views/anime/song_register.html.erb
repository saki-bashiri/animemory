<%= render :partial => "header" %>
<h1>曲新規登録</h1>

<%= form_tag url_for(:action => "song_register_conf"), :method => :post do %>
    <p><%= hidden_field_tag "anime", @anime.id %></p>
    <p><%= @anime.title %></p>

    <p>曲名<%= text_field_tag "song[title]" %></p>

    <p><% singers_for_select = @singers.map{|singer| [singer.name, singer.id] }.unshift(["なし", 0]) %></p>
    <p>歌手<%= select_tag "song[singer_id]", options_for_select(singers_for_select) %></p>

    <p><% songwriters_for_select = @songwriters.map{|songwriter| [songwriter.name, songwriter.id] }.unshift(["なし", 0]) %></p>
    <p>作詞者<%= select_tag "song[songwriter_id]", options_for_select(songwriters_for_select) %></p>

    <p><% composers_for_select = @composers.map{|composer| [composer.name, composer.id] }.unshift(["なし", 0]) %></p>
    <p>作曲者<%= select_tag "song[composer_id]", options_for_select(composers_for_select) %></p>

    <p>曲のタイプ<%= select_tag "song[song_type]", options_for_select([["OP", 1], ["ED", 2], ["挿入歌", 3], ["キャラソン", 4], ["その他", 99]]) %></p>
    <p>メモ<%= text_area_tag "song[description]" %></p>

<%= submit_tag "作成", :name => "commit" %>
<% end %>